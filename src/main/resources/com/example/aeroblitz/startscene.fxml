<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-size: cover; -fx-background-color: #000000;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aeroblitz.startscenecontroller">

    <children>
      <ImageView fx:id="imageView" fitHeight="683.0" fitWidth="438.0" layoutX="460.0" pickOnBounds="true" preserveRatio="true" />
        <Button layoutX="135.0" layoutY="256.0" mnemonicParsing="false" prefHeight="63.0" prefWidth="307.0" style="-fx-background-color: #D3D3D3;" text="START" textFill="#701414">
            <font>
                <Font name="Times New Roman Bold" size="36.0" />
            </font>
        </Button>
        <Button layoutX="135.0" layoutY="61.0" mnemonicParsing="false" onAction="#handleNewGameButtonClick" prefHeight="63.0" prefWidth="307.0" text="NEW GAME">
            <font>
                <Font name="Times New Roman Bold" size="35.0" />
            </font>
         <textFill>
            <RadialGradient centerX="0.7140221683741496" centerY="0.5" radius="0.5">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.5803921818733215" green="0.2235294133424759" blue="0.2235294133424759" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.5803921818733215" green="0.2235294133424759" blue="0.2235294133424759" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
        </Button>
        <Button layoutX="139.0" layoutY="447.0" mnemonicParsing="false" onAction="#handleQuitButtonClick" prefHeight="63.0" prefWidth="307.0" style="-fx-background-color: #D3D3D3;" text="QUIT" textFill="#803f3f">
            <font>
                <Font name="Times New Roman Bold" size="36.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
